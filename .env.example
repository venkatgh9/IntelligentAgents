# Gmail Unsubscribe Agent Configuration

# Safety: Start with dry run enabled
DRY_RUN=true

# Classification method: 'true' for AI, 'false' for rule-based
USE_AI=false

# Maximum emails to process per run
MAX_EMAILS=50

# Minimum confidence score to unsubscribe (0.0 - 1.0)
MIN_CONFIDENCE=0.7

# Gmail search query to filter emails
# Examples:
#   - is:unread category:promotions
#   - is:unread category:promotions newer_than:7d
#   - category:promotions
GMAIL_QUERY=is:unread category:promotions

# OpenAI API Key (required if USE_AI=true)
OPENAI_API_KEY=your_openai_api_key_here
